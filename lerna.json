{
  "npmClient": "pnpm",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "conventionalCommits": true,
  "changelogPreset": "conventional-changelog-conventionalcommits",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "lerna-debug.log"
      ],
      "message": "chore: publish",
      "registry": "https://npm.pkg.github.com/"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
